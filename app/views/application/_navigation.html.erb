<header class="navigation">
  <div class="pull-right">
    <% if signed_in? %>
      <span>Signed in as <%= current_user.name %></span>
      <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
    <% else %>
      <span><%= link_to "Sign up", new_user_session_path %></span>
      <%= link_to "Sign in with Facebook", user_omniauth_authorize_path("facebook"), class: "btn-auth btn-facebook" %>
    <% end%>
  </div>
</header>
